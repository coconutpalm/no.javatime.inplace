<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="no.javatime.category"
            name="InPlace">
      </category>
      <view
            name="Trace View"
            icon="$nl$/icons/eview16/error_log.gif"
            category="no.javatime.category"
            class="no.javatime.inplace.pl.trace.LogView"
            id="no.javatime.inplace.pl.traceview">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <viewShortcut
               id="no.javatime.inplace.pl.traceview">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.pde.ui.PDEPerspective">
         <viewShortcut
               id="no.javatime.inplace.pl.traceview">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.views.showView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M2+M3+Q M">
         <parameter
               id="org.eclipse.ui.views.showView.viewId"
               value="no.javatime.inplace.pl.traceview">
         </parameter>
      </key>
      <key
            platform="carbon"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M2+M3+Q M">
      </key>
      <key
            platform="carbon"
            commandId="org.eclipse.ui.views.showView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+Q M">
         <parameter
               id="org.eclipse.ui.views.showView.viewId"
               value="no.javatime.inplace.pl.traceview">
         </parameter>
      </key>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
       <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="log"
            id="log"
            name="%content-type.name.log"
            priority="high">
      </content-type>
   </extension>
</plugin>
